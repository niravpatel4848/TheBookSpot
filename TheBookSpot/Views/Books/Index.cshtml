@model IEnumerable<TheBookSpot.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-4">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="text-primary">BOOKS</h2>
        </div>
        <div class="col-sm-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; ADD A BOOK
            </a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-default table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">ISBN</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">AUTHOR</th>
                        <th scope="col">GENRE</th>
                        <th scope="col">PUBLISHER</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.ISBN</td>
                            <td>@obj.Price</td>
                            <td>@obj.Author.FirstName @obj.Author.LastName</td>
                            <td>@obj.Category.Name</td>
                            <td>@obj.Publisher.Name</td>

                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-info">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <p>No books exists...</p>
        }
    </div>
</div>

