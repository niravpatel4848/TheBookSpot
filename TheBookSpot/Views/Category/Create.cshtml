@model TheBookSpot.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ADD GENRE</h2>
<div class="container">
    <div class="row">
        <form method="post" asp-action="Create">
            <fieldset>

                <div class="form-group">
                    <label asp-for="Name" class="form-label mt-4">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="genreName" placeholder="Enter Genre">
                </div>

                <div class="form-group pt-5">
                    <button type="submit" class="btn btn-primary">ADD</button>
                    <a class="btn btn-success" asp-action="Index" asp-controller="Category">BACK</a>

                </div>

            </fieldset>
        </form>
    </div>
</div>
