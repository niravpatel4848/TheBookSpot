@model IEnumerable<TheBookSpot.Models.Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container pt-4">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="text-primary">GENRES</h2>
        </div>
        <div class="col-sm-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">ADD GENRE
            </a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-primary table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">GENRE NAME</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Id</td>
                            <td>@obj.Name</td>
                            <td></td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <p>No genres exists...</p>
        }
    </div>
</div>

