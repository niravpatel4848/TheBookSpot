@model IEnumerable<TheBookSpot.Models.Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container pt-4">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="text-primary">GENRES</h2>
        </div>
        <div class="col-sm-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; ADD GENRE
            </a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-default table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">GENRE NAME</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="30%">@obj.Id</td>
                            <td width="50%">@obj.Name</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" 
                                    class="btn btn-info">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                                    class="btn btn-danger">
                                        <i class="fa-solid fa-trash-can"></i> 
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <p>No genres exists...</p>
        }
    </div>
</div>

